<div class="container mt-5">

  <h1 class="text-primary text-center mb-4">{{title}}</h1>

    <form action="/exercises" method="POST" class="mt-4">
      <div class="mb-3">
       <label for="type" class="form-label">Type:</label>
        <input type="text" 
           id="type" 
           name="type" 
           class="form-control" 
           required
           placeholder="Ex: Musculation, Cardio ...">
      </div>

      <div class="mb-3">
       <label for="description" class="form-label">Description:</label>
       <textarea id="description" 
              name="description" 
              class="form-control" 
              rows="4" 
              required
              placeholder="Décrivez l'exercice, par exemple : durée, objectifs, etc..."></textarea>
      </div>

      <div class="mb-3">
       <label for="duration" class="form-label">Durée (en minutes):</label>
       <input type="number" id="duration" name="duration" class="form-control">
      </div>

      <div class="mb-3">
       <label for="distance" class="form-label">Distance (en km, optionnel):</label>
       <input type="number" id="distance" name="distance" class="form-control">
      </div>

    <div class="mb-3">
      <label for="calories" class="form-label">Calories brûlées (optionnel):</label>
      <input type="number" id="calories" name="calories" class="form-control">
    </div>

    <div class="mb-3">
      <label for="completed" class="form-label">Statut:</label>
      <select name="completed" id="completed" class="form-select">
        <option value="false">Non complété</option>
        <option value="true">Complété</option>
      </select>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-success">
       <i class="fas fa-plus"></i> Ajouter
      </button>
    </div>
  </form>
</div>  
