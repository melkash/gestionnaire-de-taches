<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier une tâche</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Modifier le statut de la tâche</h1>
        <form action="/tasks/{{task._id}}?_method=PUT" method="POST" class="p-4 border rounded shadow-sm bg-light">
            <input type="hidden" name="_method" value="PUT">

            <!-- Titre -->
            <div class="mb-3">
                <label for="title" class="form-label">Titre :</label>
                <input 
                    type="text" 
                    id="title" 
                    name="title" 
                    value="{{task.title}}" 
                    class="form-control" 
                    required>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description :</label>
                <textarea 
                    id="description" 
                    name="description" 
                    class="form-control" 
                    rows="3" 
                    required>{{task.description}}</textarea>
            </div>

            <!-- Statut -->
            <div class="mb-3">
                <label for="completed" class="form-label">Statut :</label>
                <select 
                    name="completed" 
                    id="completed" 
                    class="form-select">
                    <option value="false" {{#unless task.completed}}selected{{/unless}}>Non complété</option>
                    <option value="true" {{#if task.completed}}selected{{/if}}>Complété</option>
                </select>
            </div>

            <!-- Bouton de soumission -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Mettre à jour</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
