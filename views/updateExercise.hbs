<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier un exercice</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Modifier le statut de l'execice</h1>
         {{#if success}}
           <div class="alert alert-success text-center">{{success}}</div>
         {{/if}}

         {{#if error}}
           <div class="alert alert-danger text-center">{{error}}</div>
         {{/if}}
    <form action="/exercises/{{exercise._id}}?_method=PUT" method="POST" class="p-4 border rounded shadow-sm bg-light mb-5">
            <input type="hidden" name="_method" value="PUT">

            <!-- Type -->
            <div class="mb-3">
                <label for="type" class="form-label">Type :</label>
                <input 
                    type="text" 
                    id="type" 
                    name="type" 
                    value="{{exercise.type}}" 
                    class="form-control"
                    required
                    placeholder="Entrez le titre de l'exercice">
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description :</label>
                <textarea 
                    id="description" 
                    name="description" 
                    class="form-control" 
                    rows="3" 
                    required
                    placeholder="Ajoutez des détails sur l'exercice, par exemple : objectifs, lieu, etc...">{{exercise.description}}</textarea>
            </div>

            <div class="mb-3">
                <label for="duration" class="form-label">Duration :</label>
                <input 
                     type="number"
                     id="duration"
                     name="duration"
                     value="{{exercise.duration}}"
                     class="form-control"
                     placeholder="Entrez la durée de l'exercice">
            </div>

            <div class="mb-3">
                <label for="distance" class="form-label">Distance :</label>
                <input 
                     type="number"
                     id="distance"
                     name="distance"
                     value="{{exercise.distance}}"
                     class="form-control"
                     placeholder="Entrez la distance">
            </div>

            <div class="mb-3">
                <label for="calories" class="form-label">Calories :</label>
                <input 
                     type="number"
                     id="calories"
                     name="calories"
                     value="{{exercise.calories}}"
                     class="form-control"
                     placeholder="Entrez les calories dépensées">
            </div>

            <!-- Statut -->
            <div class="mb-3">
                <label for="completed" class="form-label">Statut :</label>
                <select 
                    name="completed" 
                    id="completed" 
                    class="form-select">
                    <option value="false" {{#unless exercise.completed}}selected{{/unless}}>Non complété</option>
                    <option value="true" {{#if exercise.completed}}selected{{/if}}>Complété</option>
                </select>
            </div>

            <!-- Bouton de soumission -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Mettre à jour</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
