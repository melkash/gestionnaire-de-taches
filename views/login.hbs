<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
    
      <h1 class="text-primary text-center mb-4">{{title}}</h1>

      {{#if successMessage}}
        <div class="alert alert-success">{{successMessage}}</div>
      {{/if}}

      <form action="/auth/login" method="POST" class="p-4 border rounded shadow-sm">
        <div class="mb-3">
          <label for="email" class="form-label" aria-label="Adresse email">Email :</label>
          <input type="email" id="email" name="email" class="form-control" required placeholder="Entrez votre adresse email" autocomplete="off"> 
        </div>

        <div class="mb-3">
          <label for="password" class="form-label" aria-label="Mot de passe">Mot de passe :</label>
          <input type="password" id="password" name="password" class="form-control" required placeholder="Entrez votre mot de passe" autocomplete="new-password">  
        </div>

        <button type="submit" class="btn btn-primary w-100">Se connecter</button>
      </form>

      <p class="mt-3 text-center">
        Pas encore inscrit ? <a href="/auth/register">Créer un compte</a>
      </p>
      <p class="mt-2 text-center">
        <a href="/auth/forgot-password">Mot de passe oublié ?</a>
      </p>

    </div>
  </div>
</div>
